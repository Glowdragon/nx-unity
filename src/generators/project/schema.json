{
  "$schema": "http://json-schema.org/schema",
  "$id": "Project",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the project?",
      "pattern": "^[a-zA-Z][^:]*$"
    }
  },
  "required": ["name"]
}
